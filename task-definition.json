{
    "family": "laravel-backend-app",
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "046756490856.dkr.ecr.eu-west-2.amazonaws.com/budgeter-cp-nginx:latest",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "laravelapp-nginx",
                    "awslogs-region": "eu-west-2",
                    "awslogs-stream-prefix": "laravel-backend-app"
                }
            },
            "dependsOn": [
                {
                    "containerName": "php-fpm",
                    "condition": "START"
                }
            ],
            "essential": true
        },
        {
            "name": "php-fpm",
            "image": "046756490856.dkr.ecr.eu-west-2.amazonaws.com/budgeter-cp-php-fpm:latest",
            "portMappings": [
                {
                    "containerPort": 9000
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "laravelapp-php-fpm",
                    "awslogs-region": "eu-west-2",
                    "awslogs-stream-prefix": "laravel-backend-app"
                }
            },
            "secrets": [
                {
                    "name": "APP_ENV",
                    "valueFrom": "laravelapp_app_env"
                },
                {
                    "name": "APP_DEBUG",
                    "valueFrom": "laravelapp_app_debug"
                },
                {
                    "name": "APP_KEY",
                    "valueFrom": "laravelapp_app_key"
                },
                {
                    "name": "APP_URL",
                    "valueFrom": "laravelapp_app_url"
                },
                {
                    "name": "DB_CONNECTION",
                    "valueFrom": "laravelapp_db_connection"
                },
                {
                    "name": "DB_DATABASE",
                    "valueFrom": "laravelapp_db_database"
                },
                {
                    "name": "DB_HOST",
                    "valueFrom": "laravelapp_db_host"
                },
                {
                    "name": "DB_PASSWORD",
                    "valueFrom": "laravelapp_db_password"
                },
                {
                    "name": "DB_PORT",
                    "valueFrom": "laravelapp_db_port"
                },
                {
                    "name": "DB_USERNAME",
                    "valueFrom": "laravelapp_db_username"
                }
            ],
            "essential": true
        }
    ],
    "executionRoleArn": "ecsTaskExecutionRole",
    "cpu": "1024",
    "memory": "2048",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ]
}